doctype html
html
  head
    title #{title}
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='stylesheets/bootstrap.css', rel='stylesheet')
    link(href='stylesheets/style.css', rel='stylesheet')
Body
    .container
      .jumbotron
        h1(align='center') Online Bookstore
    .container
      nav.navbar.navbar-inverse.navbar
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
            span.icon-bar
            span.icon-bar
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
            li
              a.dropdown-toggle(href='#', data-toggle='dropdown') 
                | Browse
                b.caret
              ul.dropdown-menu.multi-level
                li.dropdown-submenu
                  a.dropdown-toggle(href='#', data-toggle='dropdown') Genres
                  ul.dropdown-menu
                    li
                      a(href='#') All
                    li
                      a(href='#') Drama
                    li
                      a(href='#') Action
                    li
                      a(href='#') Romance
                    li  
                      a(href='#') Mystery
                    li
                      a(href='#') Horror
                    li
                      a(href='#') Recommended
                li.dropdown-submenu      
                   a.dropdown-toggle(href='#', data-toggle='dropdown') Authors
                    ul.dropdown-menu
                      li
                        a(href='#') J.K. Rowling
                      li
                        a(href='#') John Grisham                  
            li
              a(href='/contact') Contact
            li
              a(href='/about') About

          .col-sm-3.col-md-3.pull-right
            form.navbar-form.navbar-right(role='search', method='GET', action= '/search')
              .input-group
                input.form-control(type='text', name = 's', placeholder='Search')
                span.input-group-btn
                  button.btn.btn-default(type='submit')
                    span.glyphicon.glyphicon-search

          ul.nav.navbar-nav.navbar-right
            li
              a(href='/signup') Sign Up
            li
              a(href='/login') Log-in
            li
              a(href='/MyAccount') 
                span.glyphicon.glyphicon-user
                |   My Account
            li
              a(href='/Cart')
                span.glyphicon.glyphicon-shopping-cart
                |   Cart
block content

script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
