extends layout
block content
    .container
            -var bookResponse = results //- Get search results
            - for(var i = 0; i < 8; ++i){
                .col-md-3
                    .panel.panel-primary
                        .panel-body
                            p
                            img.img-responsive.center-block(src=bookResponse[i].image, alt=bookResponse[i].bookname, style='width:100px;height:100px;')
                            | &nbsp;
                            p= bookResponse[i].bookname
                            p= 'Author: '+bookResponse[i].author
                            p= 'Price: $'+bookResponse[i].price
                            | &nbsp;
                            button#Information(value=bookResponse[i].bookid, href='/'+bookResponse[i].bookid) Information
                            button#Price(value=bookResponse[i].price) Price
                            button#AddToCart(value=bookResponse[i].bookname) Name
                            br
                            | &nbsp;
                            button.btn.btn-primary.pull-left(type='Purchase') Purchase
                            | &nbsp;
                            button.btn.btn-primary.pull-right(type='Purchase') Add to Cart
            -} 
script(src='/public/javascripts/addToCart.js')

