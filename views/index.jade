extends layout
block content
    .container
            -var bookResponse = results //- Get search results
            - for(var i = 0; i < 8; ++i){
                .col-md-3
                    .panel.panel-primary
                        .panel-body
                            p
                            img.img-responsive.center-block(src=bookResponse[i].image, alt=bookResponse[i].bookname, style='width:100px;height:100px;')
                            | &nbsp;
                            p= bookResponse[i].bookname
                            p= 'Author: '+bookResponse[i].author
                            p= 'Price: $'+bookResponse[i].price
                            | &nbsp;
                            button.btn.btn-primary.center-block(value=bookResponse[i].bookid) Information
                            //- button.btn.btn-primary.pull-right(value=bookResponse[i].price, href='/'+bookResponse[i].bookid) Add to cart
            -} 
script(src='/public/javascripts/addToCart.js')

